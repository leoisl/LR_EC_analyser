#These are the steps to run the tool on the ONT 1D cDNA full dataset
#1/ Download the already processed data on this folder:
#This data was created by running the tool, and compacting it as:
zip -r processed_data_on_mouse_nanopore_cDNA.zip alignqc_out_on_*.bam/data/ *.sorted.bam *.sorted.bam.bai Mus_musculus.GRCm38.87.gtf Mus_musculus.GRCm38.87.gtf.idx Mus_musculus.GRCm38.dna.primary_assembly.fa Mus_musculus.GRCm38.dna.primary_assembly.fa.fai /data2/ASTER/nanopore_mouse/transcriptomic_data/Mus_musculus.GRCm38.87.paralog_genes.80_percent_plus_identity.txt

cd <path_to_this_project_root>
cd ONT_1D_cDNA_full_dataset
wget https://www.dropbox.com/s/t10bj4nofxthdpd/processed_data_on_mouse_nanopore_cDNA.zip?dl=1 -O processed_data_on_mouse_nanopore_cDNA.zip
unzip processed_data_on_mouse_nanopore_cDNA.zip
cd ..

#2/ run the tool
bash setup.sh
source venv/bin/activate
python run_LR_EC_analyser.py --genome ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/Mus_musculus.GRCm38.dna.primary_assembly.fa --gtf ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/Mus_musculus.GRCm38.87.gtf --raw ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/raw.bam -o ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA --self ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/canu.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/daccord.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/daccord_trimmed.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/LoRMA.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/MECAT.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/pbdagcon.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/pbdagcon_trimmed.bam --hybrid ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/LoRDEC.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/LoRDEC_trimmed.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/NaS.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/PBcR.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/proovread_untrimmed.bam ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/proovread_trimmed.bam --paralogous ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/data2/ASTER/nanopore_mouse/transcriptomic_data/Mus_musculus.GRCm38.87.paralog_genes.80_percent_plus_identity.txt -o ONT_1D_cDNA_full_dataset/processed_data_on_mouse_nanopore_cDNA/ --skip_bam_process --skip_alignqc --skip_copying
deactivate